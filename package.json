{
  "name": "workclock",
  "version": "0.1.2",
  "description": "a time keeper for work shifts",
  "main": "./index.js",
  "browser": "./src/client.js",
  "repository": {
    "type": "git",
    "url": "http://github.com/ahdinosaur/workclock"
  },
  "author": "",
  "license": "AGPLv3",
  "bugs": {
    "url": "https://github.com/ahdinosaur/workclock/issues"
  },
  "dependencies": {
    "bootstrap": "git+https://github.com/twitter/bootstrap.git#v3.0.3",
    "ecstatic": "~0.4.12",
    "underscore": "~1.5.2",
    "bluebird": "~0.11.5-0",
    "bookshelf": "~0.6.1",
    "sqlite3": "~2.1.19",
    "feathers": "~0.2.0",
    "jquery": "~2.1.0-beta2",
    "backbone": "~1.1.0",
    "react.backbone": "git+https://github.com/ahdinosaur/react.backbone.git",
    "backbone-validation": "~0.9.0",
    "should": "~2.1.1",
    "brfs": "0.0.8",
    "less": "~1.5.1",
    "browserify": "~3.11.0",
    "knex": "~0.5.1",
    "cssmin": "~0.4.1",
    "uglify-js": "~2.4.7",
    "reactify": "~0.5.0",
    "envify": "~0.2.0",
    "react": "~0.8.0"
  },
  "devDependencies": {
    "mocha": "~1.16.0",
    "catw": "~0.2.0",
    "watchify": "~0.4.1",
    "nodemon": "~0.7.10",
    "jshint": "~2.3.0",
    "testling": "~1.5.3",
    "npm-release": "~0.0.4",
    "phantom": "~0.5.4",
    "sinon": "~1.7.3",
    "chai": "~1.8.1"
  },
  "browserify": {
    "transform": [
      "brfs",
      "reactify"
    ]
  },
  "testling": {
    "files": "src/**/*-client/test/**/*.js",
    "harness": "mocha",
    "browsers": [
      "ie/9..latest",
      "firefox/17..nightly",
      "chrome/23..canary",
      "opera/15..next",
      "safari/6..latest",
      "iphone/6",
      "ipad/6",
      "android-browser/4.2"
    ]
  },
  "scripts": {
    "migrate": "knex --config src/node_modules/sql/config.js migrate:latest",
    "build-js": "browserify src/client.js | uglifyjs -mc > static/index.js",
    "build-css": "catw -c 'lessc --include-path=src:node_modules/bootstrap/less -' 'src/index.less' | cssmin > static/index.css",
    "build": "npm run build-css && npm run build-js",
    "watch-js": "watchify src/client.js -o static/index.js -dv",
    "watch-css": "catw -c 'lessc --include-path=src:node_modules/bootstrap/less -' 'src/index.less' -o static/index.css -v",
    "watch": "npm run watch-css & npm run watch-js",
    "test-server": "(export NODE_ENV=test; npm run migrate && mocha -t 10s src/**/*-{server,common}/test/**/*.js)",
    "test-client": "(export NODE_ENV=test; testling)",
    "test": "npm run test-server && (if [ -z \"$TRAVIS\" ]; then npm run test-client; fi)",
    "lint": "jshint src/**/*.js ;true",
    "develop": "npm run migrate && $(npm run watch & nodemon index.js)",
    "start": "npm run migrate && npm run build && node .",
    "release": "npm-release patch -m \"version++\""
  }
}
